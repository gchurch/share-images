<h1>{{username}}</h1>
<h3>User Info:</h3>
<p>Joined: {{signupDateTime}}</p>
<h3>Uploaded Images:</h3>
<div id='images'>
  {{#images}}<a href='/image/{{imageID}}'>
    <div>
      <div><i>{{title}}</i></div>
      <div>by <b>{{username}}</b></div>
      <div class='image'><img src='/images/uploads/{{path}}' alt='{{alt}}'/></div>
    </div>
  </a>{{/images}}
</div>
<h3>Comments Posted:</h3>
<div>
  <table>
    <tr>
      <th>Image</th>
      <th>Comment</th>
      <th>Time Posted</th>
    </tr>
    {{#comments}}
    <tr>
      <td><a href='/image/{{imageID}}'>{{imageID}}</a></td>
      <td>{{text}}</td>
      <td>{{postDateTime}}</td>
    </tr>
    {{/comments}}
  </table>
</div>