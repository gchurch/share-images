<h1><i>{{image.title}}</i></h1>
<h2>by <a href="/user/{{image.username}}">{{image.username}}</a></h2>
<div>
  <img src='/images/uploads/{{image.path}}' alt='An image.'/>
</div>
<p>Uploaded: {{image.uploadDateTime}}</p>
<h3>Comments</h3>
<div>
  <table>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th>Time Posted</th>
    </tr>
    {{#comments}}
    <tr>
      <td><a href="/user/{{username}}">{{username}}</a></td>
      <td>{{text}}</td>
      <td>{{postDateTime}}</td>
    </tr>
    {{/comments}}
  </table>
</div>
<div>
  <form method='POST'>
    <div>
      <textarea maxlength="{{maxCommentLength}}" placeholder='Add a comment...' name='text'></textarea>
    </div>
    <div>
      <input type='submit' value='Submit'>
    </div>
  </form>
</div>