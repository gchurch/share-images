<h1><i>{{image.title}}</i></h1>
<h2>by <a href="/user/{{image.username}}">{{image.username}}</a></h2>
<div>
  <img src='/images/uploads/{{image.path}}'' alt='An image.'/>
</div>
<h3>Comments</h3>
<div>
  <form method='POST'>
    <div>
      <textarea placeholder='Add a comment...' name='text'></textarea>
    </div>
    <div>
      <input type='submit' value='Submit'></input>
    </div>
  </form>
</div>
<div>
  <table>
    <tr>
      <th>Comment</th>
      <th>User</th>
    </tr>
    {{#comments}}
    <tr>
      <td>{{text}}</td>
      <td>{{username}}</td>
    </tr>
    {{/comments}}
  </table>
</div>